@page "/counter"
@rendermode InteractiveWebAssembly
@inject IJSRuntime JS

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="DecrementCount"> - </button>
<button class="btn btn-primary" @onclick="NullCount">Restart Counter</button>
<button class="btn btn-primary" @onclick="IncrementCount"> + </button>

<button class="btn btn-primary" @onclick="ShowMessage">Show me</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        if (currentCount > 0)
        {   
            currentCount--;
        }
    }

    private void NullCount()
    {
        currentCount = 0;
    }

    private void ShowMessage()
    {
		JS.InvokeVoidAsync("alert", "Hello from Blazor!");
	}
}
